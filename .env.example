# ========================================
# VARIABLES DE ENTORNO - EJEMPLO
# ========================================
# Copiar este archivo a .env y configurar los valores

# ========================================
# AMBIENTE GENERAL
# ========================================
ENVIRONMENT=test
LOG_LEVEL=INFO
DEBUG=false

# ========================================
# API REST (PUERTO 8002)
# ========================================
API_HOST=0.0.0.0
API_PORT=8002
API_WORKERS=1
API_TIMEOUT=30

# ========================================
# STREAMLIT (PUERTO 8501)
# ========================================
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# ========================================
# MLFLOW (PUERTO 5002)
# ========================================
MLFLOW_TRACKING_URI=file:///app/outputs/mlruns
MLFLOW_BACKEND_STORE_URI=/app/outputs/mlruns
MLFLOW_ARTIFACT_STORE_URI=/app/outputs/mlruns
MLFLOW_HOST=0.0.0.0
MLFLOW_PORT=5002

# ========================================
# BASE DE DATOS
# ========================================
DATABASE_URL=postgresql://username:password@localhost:5432/diabetes_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=diabetes_db
DB_USER=diabetes_user
DB_PASSWORD=your_password_here

# ========================================
# MODELOS Y ARCHIVOS
# ========================================
MODELS_DIR=/app/models
OUTPUTS_DIR=/app/outputs
DATA_DIR=/app/data
LOGS_DIR=/app/logs

# ========================================
# CONFIGURACIÓN POR AMBIENTE
# ========================================

# TEST ENVIRONMENT
[TEST]
ENVIRONMENT=test
DEBUG=true
LOG_LEVEL=DEBUG
API_WORKERS=1
DATABASE_URL=${TEST_DATABASE_URL}

# STAGING ENVIRONMENT
[STAGING]
ENVIRONMENT=staging
DEBUG=false
LOG_LEVEL=INFO
API_WORKERS=2
DATABASE_URL=${STAGING_DATABASE_URL}

# PRODUCTION ENVIRONMENT
[PRODUCTION]
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=WARNING
API_WORKERS=4
DATABASE_URL=${PRODUCTION_DATABASE_URL}

# ========================================
# URLs Y DOMINIOS
# ========================================
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8501","https://yourdomain.com"]
API_BASE_URL=https://your-api-domain.com
STREAMLIT_BASE_URL=https://your-streamlit-domain.com
MLFLOW_BASE_URL=https://your-mlflow-domain.com

# ========================================
# AUTENTICACIÓN Y SEGURIDAD
# ========================================
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ========================================
# MONITOREO Y LOGGING
# ========================================
SENTRY_DSN=your-sentry-dsn-here
LOG_TO_FILE=true
LOG_FILE_PATH=/app/logs/diabetes.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# ========================================
# CONFIGURACIÓN ESPECÍFICA DE MODELOS
# ========================================
DEFAULT_MODEL=gradient_boosting
MODEL_UPDATE_INTERVAL=3600
ENABLE_MODEL_MONITORING=true
ENABLE_PREDICTION_LOGGING=true

# ========================================
# LÍMITES Y VALIDACIONES
# ========================================
MAX_BATCH_SIZE=1000
MAX_FILE_SIZE_MB=10
REQUEST_TIMEOUT_SECONDS=60
MAX_CONCURRENT_REQUESTS=10

# ========================================
# CONFIGURACIÓN DE EMAIL (OPCIONAL)
# ========================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=diabetes-system@yourdomain.com